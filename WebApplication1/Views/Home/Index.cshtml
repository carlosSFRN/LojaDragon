@model IEnumerable<WebApplication1.Models.Quadrinho>

@{
    ViewData["Title"] = "Home Page";
}

<main>
    <div class="container" id="code_prod_complex">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <figure class="card card-product">
                        <div class="img-wrap"><img src="~/img/onepieceVol59.jpg"></div>
                        <figcaption class="info-wrap">
                            <h4 class="title">@item.Titulo</h4>
                            <p class="desc">@item.Descricao</p>
                            <div class="rating-wrap">
                                <ul class="rating-stars">
                                    <li style="width:80%" class="stars-active">
                                        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                                    </li>
                                    <li>
                                        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                                    </li>
                                </ul>
                                <div class="label-rating">132 reviews</div>
                                <div class="label-rating">154 orders </div>
                            </div> <!-- rating-wrap.// -->
                        </figcaption>
                        <div class="bottom-wrap">
                            @Html.ActionLink("SAIBA MAIS", "Details", "Quadrinho", null, new { @class = "btn btn-sm btn-primary float-right" })
                            <div class="price-wrap h5">
                                <span class="price-new">R$ @item.Preco</span> <del class="price-old">R$ 45,90</del>
                            </div> <!-- price-wrap.// -->
                        </div> <!-- bottom-wrap.// -->
                    </figure>
                </div>
            }

        </div>
    </div>
</main>
